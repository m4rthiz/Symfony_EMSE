{% extends 'base.html.twig' %}

{% block body %}
    <h1>Application</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ application.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ application.author }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ application.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if application.date %}{{ application.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('platform_application_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('platform_application_edit', { 'id': application.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
