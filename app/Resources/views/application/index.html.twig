{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste de candidatures</h1>

    <table class='table table-striped'>
        <thead class='thead-dark'>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td><a href="{{ path('platform_application_show', { 'id': application.id }) }}">{{ application.id }}</a></td>
                <td>{{ application.author }}</td>
                <td>{{ application.content }}</td>
                <td>{% if application.date %}{{ application.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('platform_application_show', { 'id': application.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('platform_application_edit', { 'id': application.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('platform_application_new') }}">Create a new application</a>
        </li>
    </ul>
{% endblock %}
